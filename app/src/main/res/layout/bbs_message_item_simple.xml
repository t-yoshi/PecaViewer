<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
                name="viewModel"
                type="org.peercast.pecaviewer.chat.adapter.ListItemViewModel" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">

        <TextView
                android:id="@+id/vNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|left"
                android:minWidth="30sp"
                android:paddingRight="3dp"
                android:text="@{viewModel.number}"
                android:textAppearance="?attr/textAppearanceListItem"
                android:textStyle="bold" />

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/vBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:text="@{viewModel.body}"
                    android:textAppearance="?attr/textAppearanceListItem"
                    android:textIsSelectable="true" />
            <TextView
                    android:id="@+id/vElapsedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:alpha="0.4"
                    android:text="@{viewModel.elapsedTime}"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:visibility="@{viewModel.elapsedTime.length() > 0 ? View.VISIBLE : View.INVISIBLE}" />
        </FrameLayout>

    </LinearLayout>
